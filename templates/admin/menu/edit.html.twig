{% extends 'adminbase.html.twig' %}

{% block title %}Edit Menu{% endblock %}

{% block body %}
      <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1><button class="btn btn-block btn-secondary btn-lg disabled"><i class="fas fa-pencil-alt"></i>Edit Menu Page</button></h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item active">Edit Menu</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">


                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                               <i class="fas fa-trash"></i></button>
                    </div>
                </div>
                <div class="card-body">

       
            {{ include('admin/menu/_form.html.twig', {'button_label': 'Mettre à Jour'}) }}
            
        </br>

        <div class="row">  
             <div class="col-md-2">
                  <a href="{{ path('menu_index') }}" class="btn btn-block btn-info">Revenir à la Liste</a>
             </div>  
          </br>

          <div class="col-md-2">
            {{ include('admin/menu/_delete_form.html.twig') }}
        </div>
    </div>

    <!-- /.card-body -->
    <div class="card-footer">
        
    </div>
    <!-- /.card-footer-->
    </div>
    <!-- /.card -->

    </section>
    <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

{% endblock %}
