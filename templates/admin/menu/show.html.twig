         </div>
         </br>
         
         <div class="col-md-2">
    
    {{ include('admin/menu/_delete_form.html.twig') }}

    </div>
 </div>
    
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    Footer
                </div>
                <!-- /.card-footer-->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

{% endblock %}
