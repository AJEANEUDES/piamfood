{% extends 'adminbase.html.twig' %}

{% block title %}Restaurant{% endblock %}

{% block body %}

  <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1>Blank Page</h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/admin">Acceuil</a></li>
                            <li class="breadcrumb-item active">Blank Page</li>
                        </ol>
                    </div>
                </div>
            </div><!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Title</h3>

                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i></button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                            <i class="fas fa-times"></i></button>
                    </div>
                </div>
                <div class="card-body">

    <h1>Restaurant</h1>

    <table class="table table-striped projects">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ restaurant.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ restaurant.titre }}</td>
            </tr>
            <tr>
                <th>Motscles</th>
                <td>{{ restaurant.motscles }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ restaurant.description |raw }}</td>
            </tr>
            
             <tr>
                <th>Image</th>
                    <td>
                     <img src="{{ asset('uploads/images/' ~ restaurant.image) }}" height="100">
                    </td>
             </tr>

            <tr>
                <th>Adresse</th>
                <td>{{ restaurant.adresse }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ restaurant.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ restaurant.email }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ restaurant.Ville }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ restaurant.location }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ restaurant.status }}</td>
            </tr>
           </br>
        </tbody>
    </table>
 </br>
<div class="row">
    <div class="col-md-2">
        <a href="{{ path('restaurant_index') }}"  class="btn btn-block btn-info">Revenir sur la Liste</a>
    </div>

     <div class="col-md-2">
        <a href="{{ path('restaurant_edit', {'id': restaurant.id}) }}" class="btn btn-block btn-success"><i class="fas fa-pencil-alt"></i></a>
    </div>

     <div class="col-md-2">
        {{ include('admin/restaurant/_delete_form.html.twig') }}
    </div>
 </div>
 </br>
     <!-- /.card-body -->
                <div class="card-footer">
                    
                </div>
                <!-- /.card-footer-->
            </div>
            <!-- /.card -->

        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

{% endblock %}
