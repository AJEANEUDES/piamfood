{% extends 'homebase.html.twig' %}

{% block title %}{{ restaurant.titre }}{% endblock %}
{% block motscles %}{{ restaurant.motscles }}{% endblock %}
{% block description %}{{ restaurant.description  }} {% endblock %}



{% block body %}
    <SCRIPT language="JavaScript" type="text/javascript">
        function openWin( windowURL, windowName, windowFeatures ) { window.open( windowURL, windowName, windowFeatures ) ; 	}
    </SCRIPT>
    <!-- Subintro
    ================================================== -->
    <section id="subintro">
        <div class="container">
            <div class="row">
                <div class="span8">
                    <ul class="breadcrumb">
                        <li><a href="#"><i class="icon-home"></i></a><i class="icon-angle-right"></i></li>
                        <li><a href="#">Les Détails du Restaurant</a><i class="icon-angle-right"></i></li>
                        <li class="active">{{ restaurant.titre }}</li>
                    </ul>
                </div>
                <div class="span4">
                    <div class="search">
                        <form class="input-append">
                            <input class="search-form" id="appendedPrependedInput" type="text" placeholder="Search here.." />
                            <button class="btn btn-dark" type="submit">Search</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="maincontent">
        <div class="container">
            <div class="row">

                 <div class="span7">

                    <!-- Place somewhere in the <body> of your page -->
                    <div id="mainslider" class="flexslider">
                        <ul class="slides">

                            <li data-thumb="{{ asset('uploads/images/' ~ restaurant.image) }}" style="height: 300px; width: 500px">
                                <a class="zoom" data-pretty="prettyPhoto" href="{{ asset('uploads/images/' ~ restaurant.image) }}">
                                    <img src="{{ asset('uploads/images/' ~ restaurant.image) }}"    alt="" />
                                </a>
                                <div class="flex-caption primary">
                                    <h4>{{restaurant.titre}}</h4>


                                </div>
                            </li>

                            {% for rs in images %}
                                <li data-thumb="{{ asset('uploads/images/' ~ rs.image) }}" style="height: 300px; width: 500px">
                                    <a class="zoom" data-pretty="prettyPhoto" href="{{ asset('uploads/images/' ~ rs.image) }}">
                                        <img class="zoom" data-pretty="prettyPhoto" src="{{ asset('uploads/images/' ~ rs.image) }}"    alt="" />
                                    </a>
                                    <div class="flex-caption primary">
                                        <h4>{{rs.titre}}</h4>

                                    </div>
                                </li>
                            {% endfor %}


                        </ul>
                    </div>
                </div>
                

                <div class="col-md-4">
                    <!-- start article 1 -->
                    <article class="blog-post">
                        <div class="post-heading">
                            <h3><a href="#">User Restaurant Detail</a></h3>
                        </div>
                        <div class="row">
                            <div class="col-md-4">


                                <table class="table table-striped projects">
                                    <tbody>
                                  
                                    <tr>
                                        <th>Title</th>
                                        <td>{{ restaurant.titre }}</td>
                                    </tr>
                                    <tr>
                                        <th>Keywords</th>
                                        <td>{{ restaurant.motscles }}</td>
                                    </tr>
                                    <tr>
                                        <th>Description</th>
                                        <td>{{ restaurant.description }}</td>
                                    </tr>
                                    <tr>
                                        <th>Image</th>
                                        <td>{{ restaurant.image }}</td>
                                    </tr>
                                    <tr>
                                        
                                    <tr>
                                        <th>Adresse</th>
                                        <td>{{ restaurant.adresse }}</td>
                                    </tr>
                                    <tr>
                                        <th>Ville</th>
                                        <td>{{ restaurant.ville }}</td>
                                    </tr>
                                    <tr>
                                        <th>Téléphone</th>
                                        <td>{{ restaurant.phone }}</td>
                                    </tr>
                                    <tr>
                                        <th>Email</th>
                                        <td>{{ restaurant.email }}</td>
                                    </tr>
                                    
                                   
                                    <tr>
                                        <th>Location</th>
                                        <td>{{ restaurant.location }}</td>
                                    </tr>
                                  
                                    <tr>
                                        <th>Userid</th>
                                        <td>{{ restaurant.userid }}</td>
                                    </tr>
                                    </tbody>
                                </table>

                             
                            </div>
                        </div>
                    </article>
                    <!-- end article 1 -->

                </div>
            </div>
        </div>
    </section>

{% endblock %}


